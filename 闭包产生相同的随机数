	<body>		
	</body>
<script>
	//产生随机数
   function  showRandom(){
   	  var num=parseInt(Math.random()*10+1);
   	  console.log(num);
   }
   showRandom();
   showRandom();
   showRandom();
   //闭包的方式产生相同的随机数
   function f1(){
   	var num=parseInt(Math.random()*10+1);
   	return function(){
   		console.log(num);
   	}
   }
   var ff=f1();
   ff();
   ff();
   ff();
</script>
</html>
